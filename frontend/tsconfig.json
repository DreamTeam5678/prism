{
  "compilerOptions": {
    "typeRoots": ["./types", "./node_modules/@types"],
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node", // âœ… changed
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": ["node", "next", "next-auth"],
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",                       
    "paths": {
      "@/*": ["./*"],
      "@backend/*": ["../backend/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "lib/prisma.ts"],
  "exclude": ["node_modules"]
}
